<!DOCTYPE html>
<html lang="en">
    <%- include('../includes/head') -%>
    <body>
     <%- include('../includes/header') -%> 
  
      <%- include('../includes/sidebar') -%>

      <div class="page-wrapper">
        <div class="content container-fluid">
          <div class="page-header">
            <div class="row align-items-center">
              <div class="col">
                <h3 class="page-title">Add Grade</h3>
                <ul class="breadcrumb">
                  <li class="breadcrumb-item">
                    <a href="/grade">Quay lại</a>
                  </li>
                  <li class="breadcrumb-item active">Add Grade</li>
                </ul>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-12">
              <div class="card">
                <div class="card-body">
                  <form action="/grade/add-grade" method="post">
                    <div class="row">
                      <div class="col-12 col-sm-6">
                        <div class="form-group">
                          <label>Tên Sinh Viên</label>
                          <input name="nameStudent" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                          <label>Mã Môn Học</label>
                          <input name="monHocId" type="text" class="form-control" />
                        </div>
                      </div>
                      <div class="col-12 col-sm-6">
                        <div class="form-group">
                          <label>Mã Sinh Viên</label>
                          <input name="studentId" type="text" class="form-control" />
                        </div>
                      </div>
                      <div class="col-12 col-sm-6">
                        <div class="form-group">
                          <label>Điểm Chuyên Cần</label>
                          <input name="diemChuyenCan" type="number" class="form-control" />
                        </div>
                      </div>
                      <div class="col-12 col-sm-6">
                        <div class="form-group">
                          <label>Điểm Thực Hành</label>
                          <input name="diemThucHanh" type="number" class="form-control" />
                        </div>
                      </div>
                      <div class="col-12 col-sm-6">
                        <div class="form-group">
                          <label>Điểm Cuối Kỳ</label>
                          <input name="diemCuoiKy" type="number" class="form-control" />
                        </div>
                      </div>
                      
                      <div class="col-12">
                        <button type="submit" class="btn btn-primary">
                          Submit
                        </button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <%- include('../includes/footer') -%>
</body>
</html>