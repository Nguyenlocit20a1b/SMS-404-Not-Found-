<!DOCTYPE html>
<html lang="en">
    <%- include('../includes/head') -%>
    <body>
      <%- include('../includes/header') -%>
  
      <%- include('../includes/sidebar') -%>
    
   <div class="page-wrapper">
      <div class="content container-fluid">
        <div class="page-header">
          <div>
            <a href="/">Quay lại</a>
            <h1 class="diary-title">Danh sách môn học</h1>
        </div>
        <form method="post">
          <table class="table table-hover table-center mb-0 datatable">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Teacher Name</th>
                <th class="text-right">Action</th>
              </tr>
            </thead>
            <tbody>
              <%couserData.forEach(function(item) { %>
              <tr>
                <td><%= item.couserId %></td>
                <td><a href="/couser/detail/<%=item.couserId%>"><%= item.name %></a></td>
                <td><%= item.teacherName %></td>
                <td class="text-right">
                  <div class="actions">
                    <a
                      href="/couser/update-couser/<%= item.id %>"
                      class="btn btn-sm bg-success-light mr-2">
                      <i class="fas fa-pen"></i>
                    </a>
                    <a href="/couser/delete/<%= item.id %>" 
                      class="btn btn-sm bg-danger-light">
                      <i class="fas fa-trash"></i>
                    </a>
                  </div>
                </td>
              </tr>
              <%}); %>  
            </tbody>
          </table>
        </form>
        </div>
        </div>
        </div>
        </div>
        </div>
        </div>
        </div>
        </div>
        
        <!-- /container -->
    
</body>
</html>